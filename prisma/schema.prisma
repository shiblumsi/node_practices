generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String
  created_at DateTime @default(now())
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String
  description String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  author User @relation(fields: [authorId], references: [id])
  authorId Int  
}